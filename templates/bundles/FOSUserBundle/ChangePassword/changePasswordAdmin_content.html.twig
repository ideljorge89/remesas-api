{% extends "@FOSUser/layout_backend.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block breadcrumb %}
    <div class="col-lg-12">
        <h2>{{ 'profile.show.pages_change_password'|trans({},'FOSUserBundle') }}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('fos_user_change_password') }}">{{ 'profile.show.extra_pages'|trans({},'FOSUserBundle') }}</a>
            </li>
            <li class="active">
                <strong>{{ 'profile.show.pages_change_password'|trans({},'FOSUserBundle') }}</strong>
            </li>
        </ol>
    </div>
{% endblock %}
{% block fos_user_content %}
    <div class="row">
        <div class="col-lg-6 col-md-offset-3">
            <div class="ibox float-e-margins">
                {# <div class="ibox-title">
                     &#123;&#35;<h5></h5>
                     <div class="ibox-tools">

                     </div>&#35;&#125;
                 </div>#}
                <div class="ibox-content">
                    <form action="{{ path('fos_user_change_password') }}" method="POST"
                          class="fos_user_change_password">
                        {% if form_errors(form) %}
                            <div class="alert alert-danger alert-dismissable" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                                    &times;
                                </button>
                                <span class="fa fa-exclamation" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                {{ form_errors(form)|striptags }}
                            </div>
                        {% endif %}
                        <div class="form-group">
                            <label for="sender-email"
                                   class="control-label">{{ form_label(form.current_password)|striptags }}</label>

                            <div class="input-group m-b "><span class="input-group-addon"><i
                                            class="fa fa-key"></i></span>
                                {{ form_widget(form.current_password,{'attr':{'class':'form-control'}}) }}

                            </div>
                            {% if form_errors(form.current_password) %}
                                <div class="alert alert-danger alert-dismissable" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                                        &times;
                                    </button>
                                    <span class="fa fa-exclamation" aria-hidden="true"></span>
                                    <span class="sr-only">Error:</span>
                                    {{ form_errors(form.current_password)|striptags|raw }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="sender-email"
                                   class="control-label">{{ form_label(form.plainPassword.first)|striptags }}</label>

                            <div class="input-group m-b "><span class="input-group-addon"><i
                                            class="fa fa-lock"></i></span>
                                {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control'}}) }}

                            </div>
                            {% if form_errors(form.plainPassword.first) %}
                                <div class="alert alert-danger alert-dismissable" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                                        &times;
                                    </button>
                                    <span class="fa fa-exclamation" aria-hidden="true"></span>
                                    <span class="sr-only">Error:</span>
                                    {{ form_errors(form.plainPassword.first)|striptags }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="user-pass"
                                   class="control-label">{{ form_label(form.plainPassword.second)|striptags }}</label>

                            <div class="input-group m-b "><span class="input-group-addon"><i
                                            class="fa fa-lock"></i></span>
                                {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control'}}) }}

                            </div>
                            {% if form_errors(form.plainPassword.second) %}
                                <div class="alert alert-danger alert-dismissable" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                                        &times;
                                    </button>
                                    <span class="fa fa-exclamation" aria-hidden="true"></span>
                                    <span class="sr-only">Error:</span>
                                    {{ form_errors(form.plainPassword.second)|striptags }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary  btn-block" type="submit"><i
                                        class="fa fa-lock"></i> {{ 'change_password.submit'|trans }}</button>
                        </div>
                        {{ form_rest(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}

