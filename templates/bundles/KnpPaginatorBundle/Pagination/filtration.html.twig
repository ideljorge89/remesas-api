{% trans_default_domain 'AppBundle' %}
<form class="form-inline pull-right " method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">
    <label for="{{ filterFieldName }}">{{ 'messages.backend.filter_by'|trans }}: </label>
    <select class="form-control chosen-select " name="{{ filterFieldName }}">
        {% for field, label in fields %}
            <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label|trans }}</option>
        {% endfor %}
    </select>
    <div class="input-group">
        <input type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" class="form-control ">
        <div class="input-group-btn">
            <button class="btn btn-primary" type="submit">
               <i class="fa fa-filter"></i> {{ options.button|trans }}
            </button>
        </div>
    </div>
</form>