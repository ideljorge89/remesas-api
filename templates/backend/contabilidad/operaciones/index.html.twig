{% extends 'base_backend.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block breadcrumb %}
    <div class="col-lg-12">
        <h2>{{ 'backend.user_menu.administrator.contabilidad.operacion.title'|trans({},'FOSUserBundle') }}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('homepage_backend') }}"><i
                            class="fa fa-home"></i> {{ 'backend.user_menu.breadcrumb.home'|trans({},'FOSUserBundle') }}
                </a>
            </li>
            <li class="">
                {{ 'backend.user_menu.administrator.contabilidad.operacion.title'|trans({},'FOSUserBundle') }}
            </li>
            <li class="active">
                <strong>{{ 'backend.user_menu.administrator.contabilidad.operacion.list'|trans({},'FOSUserBundle') }}</strong>
            </li>
        </ol>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <a class="btn btn-primary pull-right" href="{{ path('tn_operaciones_distribuidor_new') }}">
                                <i class="fa fa-plus"></i>
                                {{ 'backend.user_menu.administrator.contabilidad.operacion.new'|trans({},'FOSUserBundle') }}
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id='table' class="table-responsive">
                                <table class="footable footable-paging footable-paging-center  footable-paging-center  table table-stripped table-hover  toggle-arrow-tiny"
                                       data-paging-size="100" data-paging="true" data-filtering="true"
                                       data-sorting="true">
                                    <thead>
                                    <tr>
                                        <th>{{ 'backend.operacion.table.fecha'|trans }}</th>
                                        <th>{{ 'backend.operacion.table.distribuidor'|trans }}</th>
                                        <th>{{ 'backend.operacion.table.moneda'|trans }}</th>
                                        <th>{{ 'backend.operacion.table.tipo'|trans }}</th>
                                        <th>{{ 'backend.operacion.table.importe'|trans }}</th>
                                        <th data-breakpoints="all">{{ 'backend.operacion.table.notas'|trans }}</th>
                                        <th class="text-right"
                                            data-sort-ignore="true"
                                            width="12%">{{ 'backend.comun.table.actions'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for operacion in operaciones %}
                                        <tr>
                                            {% set distribuidor = operacion.distribuidor %}
                                            <td>{{ operacion.created | date('d/m/Y H:i') }}</td>
                                            <td>{{ distribuidor.nombre~" "~distribuidor.apellidos }}</td>
                                            <td>{{ operacion.moneda ? operacion.moneda.simbolo }}</td>
                                            <td>
                                                {% if operacion.tipo == 'recibido' or operacion.tipo == 'transferido' %}
                                                    <span class="badge badge-success"><strong>{{ operacion.tipo | upper }}</strong></span>
                                                    <i class="fa fa-plus-circle"></i>
                                                {% else %}
                                                    <span class="badge badge-danger"><strong>{{ operacion.tipo | upper }}</strong></span>
                                                    <i class="fa fa-minus-circle"></i>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="label label-primary"><strong>{{ operacion.importe | number_format(2, '.', ',') }}</strong></span>
                                            </td>
                                            <td>{{ operacion.notas }}</td>
                                            <td class="text-right">

                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot class="hide-if-no-paging">
                                    <tr>
                                        <td colspan="5" class="text-center">
                                            <ul class="pagination">

                                            </ul>
                                            <div class="pagination pull-right">{{ knp_pagination_render(operaciones,'@KnpPaginator/Pagination/sliding_backend.html.twig') }}</div>
                                        </td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            dataLink()
        });

    </script>
{% endblock %}
