                                                <button type="button" class="close" data-dismiss="alert"
                                                        aria-hidden="true">&times;
                                                </button>
                                                <span class="fa fa-exclamation"
                                                      aria-hidden="true"></span>
                                                <span class="sr-only">Error:</span>
                                                {{ form_errors(form.apellidos) | striptags }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 form-group pull-right required">
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <label class="col-lg-3 control-label text-right">{{ form_label(form.phone)|striptags }}
                                        <sup>*</sup></label>

                                    <div class="col-lg-9">
                                        {{ form_widget(form.phone,{'attr':{'class':'form-control'}}) }}
                                        {% if form_errors(form.phone) %}
                                            <div class="alert alert-danger" role="alert">
                                                <button type="button" class="close" data-dismiss="alert"
                                                        aria-hidden="true">&times;
                                                </button>
                                                <span class="fa fa-exclamation"
                                                      aria-hidden="true"></span>
                                                <span class="sr-only">Error:</span>
                                                {{ form_errors(form.phone) | striptags }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <label class="col-lg-3 control-label text-right">{{ form_label(form.enabled)|striptags }}</label>

                                    <div class="col-lg-9">
                                        {% if form.vars.data.id == null %}
                                            {{ form_widget(form.enabled,{'attr':{'class':'form-control js-switch', 'checked':'checked'}}) }}
                                        {% else %}
                                            {{ form_widget(form.enabled,{'attr':{'class':'form-control js-switch'}}) }}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            {% if app.user and (is_granted("ROLE_SUPER_ADMIN") or is_granted("ROLE_AGENCIA")) %}
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group pull-right">
                                    <div class="col-md-6 col-sm-12 col-xs-12">
                                        <label class="col-lg-3 control-label text-right">{{ form_label(form.usuario)|striptags }}</label>

                                        <div class="col-lg-9">
                                            {{ form_widget(form.usuario,{'attr':{'class':'form-control'}}) }}
                                            {% if form_errors(form.usuario) %}
                                                <div class="alert alert-danger" role="alert">
                                                    <button type="button" class="close" data-dismiss="alert"
                                                            aria-hidden="true">&times;
                                                    </button>
                                                    <span class="fa fa-exclamation"
                                                          aria-hidden="true"></span>
                                                    <span class="sr-only">Error:</span>
                                                    {{ form_errors(form.usuario) | striptags }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </fieldset>
                </div>
