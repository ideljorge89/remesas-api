<table cellpadding="3px" width="785px">
    <tr>
        <td width="260px" align="left" style="font-size: 10px"><strong>Rango de fechas:</strong><br>{{ params['fi'] ~" - "~ params['ff'] }}</td>
        <td width="260px" align="left" style="font-size: 10px;"><strong>Repartidores:</strong><br>{{ params['repartidores'] }}</td>
        <td width="215px" align="left" style="font-size: 10px"><strong>Estados:</strong><br>{{ params['estados'] }}</td>
    </tr>
</table>
<table>
    <tr>
        <td>&nbsp;</td>
    </tr>
</table>
{% set totalTransfTotal = 0 %}
{% set importeTransfTotal = 0 %}
{% for item, values in transferencias %}
    {% set totalTransf = 0 %}
    {% set importeTransf = 0 %}
    <table cellpadding="3px" width="785px">
        <tr>
            <td align="center" width="685px"
                style="font-size: 10px; border-top: 1px solid black; border-bottom: 1px solid black">
                <strong>{{ item }}</strong></td>
        </tr>
    </table>
    <table cellpadding="3px" width="785px">
        <tr>
            <td width="80px" align="left" style="font-size: 9px; border-top: 1px solid black; border-bottom: 1px solid black"> <strong>CÃ³digo</strong></td>
            <td width="200px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black"><strong>Titular tarjeta</strong></td>
            <td width="200px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black"><strong>Tarjeta destino</strong></td>
            <td width="85px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black"><strong>Enviado</strong></td>
            <td width="60px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black"><strong>Fecha</strong></td>
            <td width="60px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black"><strong>Estado</strong></td>
        </tr>
        {% for transferencia in values %}
            <tr>
                <td width="80px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black">{{ transferencia.codigo }}</td>
                <td width="200px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black">{{ transferencia.titularTarjeta }}</td>
                <td width="200px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black">{{ transferencia.numeroTarjeta }}</td>
                <td width="85px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black">{{ transferencia.importe | number_format(2, '.', ',') }} {{ transferencia.moneda }}</td>
                <td width="60px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black">{{ transferencia.created | date('d/m/Y') }}</td>
                <td width="60px" align="left" style="font-size: 9px;border-top: 1px solid black; border-bottom: 1px solid black">
                    {% if transferencia.estado.codigo == '01' %}
                        <span class="label label-info">Pendiente</span>
                    {% elseif transferencia.estado.codigo == '02' %}
                        <span class="label label-primary">Asignada</span>
                    {% elseif transferencia.estado.codigo == '03' %}
                        <span class="label label-warning">Enviada</span>
                    {% elseif transferencia.estado.codigo == '04' %}
                        <span class="label label-success">Entregada</span>
                    {% else %}
                        <span class="label label-danger">Cancelada</span>
                    {% endif %}
                </td>
            </tr>
            {% set importeTransf = importeTransf + transferencia.importe %}
            {% set totalTransf = totalTransf + 1 %}
        {% endfor %}
        {% set totalTransfTotal = totalTransfTotal + totalTransf %}
        {% set importeTransfTotal = importeTransfTotal + importeTransf %}
    </table>
    <table>
        <tr>
            <td>&nbsp;</td>
        </tr>
    </table>
    <table>
        <tr>
            <td>&nbsp;</td>
        </tr>
    </table>
    <table cellpadding="3px" width="785px" style="border: 1px solid black">
        <tr>
            <td width="300px" align="left" style="font-size: 10px"><strong>RESUMEN: {{ totalTransf }}</strong> transferencia(s)</td>
            <td width="285px" align="left" style="font-size: 10px"><strong>TOTAL:</strong></td>
            <td width="100px" align="right" style="font-size: 10px">{{ importeTransf | number_format(2) }} USD</td>
        </tr>
    </table>
    <table>
        <tr>
            <td>&nbsp;</td>
        </tr>
    </table>
    <table>
        <tr>
            <td>&nbsp;</td>
        </tr>
    </table>
{% endfor %}

<table cellpadding="3px" width="785px" style="border: 1px solid black">
    <tr>
        <td width="300px" align="left" style="font-size: 10px"><strong>TOTALES: {{ totalTransfTotal }}</strong> transferencia(s)</td>
        <td width="285px" align="left" style="font-size: 10px"><strong>TOTAL:</strong></td>
        <td width="100px" align="right" style="font-size: 10px">{{ importeTransfTotal | number_format(2) }} USD</td>
    </tr>
</table>


