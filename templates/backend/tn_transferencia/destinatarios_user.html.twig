{% trans_default_domain 'AppBundle' %}
<div class="well well-sm">
    <div class="ibox animated fadeInLeft float-e-margins">
        <div class="ibox-tittle">
            <span class="label label-primary text-left fa-2x">Titulares que coinciden con los datos</span>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row table-responsive">
                <table class="footable footable-paging footable-paging-center  footable-paging-center  table table-stripped table-hover  toggle-arrow-tiny"
                       data-paging-size="10" data-paging="true" data-filtering="true"
                       data-sorting="true">
                    <thead>
                    <tr>
                        <th>{{ 'backend.transferencia.table.emisor'|trans }}</th>
                        <th>{{ 'backend.transferencia.table.titular'|trans }}</th>
                        <th>{{ 'backend.transferencia.table.tarjeta'|trans }}</th>
                        <th>Acts</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if destinatarios | length > 0 %}
                        {% for titular in destinatarios %}
                            <tr>
                                <td>{{ titular['emisor'] }}</td>
                                <td>{{ titular['titularTarjeta'] }}</td>
                                <td>{{ titular['numeroTarjeta'] }}</td>
                                <td>
                                    <i class="fa fa-check-square-o titular" data-toggle="tooltip" title="Reutilizar" data-emisor="{{ titular['emisor'] }}"
                                       data-titular="{{ titular['titularTarjeta'] }}"
                                       data-tarjeta="{{ titular['numeroTarjeta'] }}"></i>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.footable').footable();

        $('.collapse-link').click(function () {
            var ibox = $(this).closest('div.ibox');
            var button = $(this).find('i');
            var content = ibox.find('div.ibox-content');
            content.slideToggle(200);
            button.toggleClass('fa-chevron-up').toggleClass('fa-chevron-down');
            ibox.toggleClass('').toggleClass('border-bottom');
            setTimeout(function () {
                ibox.resize();
                ibox.find('[id^=map-]').resize();
            }, 50);
        });

        $('.titular').click(function (ev) {
            $('#tn_transferencia_emisor').val($(this).data('emisor'));
            $('#tn_transferencia_titularTarjeta').val($(this).data('titular'));
            $('#tn_transferencia_numeroTarjeta').val($(this).data('tarjeta'));
        });
    });
</script>