                {{ form_start(form,{'attr':{
                    'id':form.vars.id,
                    'action': path('tn_transferencia_repartidores_pendientes_repartir')
                }}) }}

                <div class="ibox-title">
                    <h5>
                        {{ 'backend.transferencia.asignar.repartidor' | trans | upper }}
                        <small> {{ form_label(form.transferencias)|striptags }} </small>
                        <label for="totaltes" class="badge badge-danger">SIN ASIGNAR AHORA {{ pagina }} DE UN TOTAL
                            DE {{ total }}</label>
                    </h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            {% if form_errors(form.transferencias) %}
                                <div class="alert alert-danger" role="alert">
                                    <button type="button" class="close" data-dismiss="alert"
                                            aria-hidden="true">&times;
                                    </button>
                                    <span class="fa fa-exclamation"
                                          aria-hidden="true"></span>
                                    <span class="sr-only">Error:</span>
                                    {{ form_errors(form.transferencias) | striptags }}
                                </div>
                            {% endif %}
                        </div>
                        <div id='table' class="col-md-12 col-xs-12 table-responsive">
                            <table class="footable footable-paging footable-paging-center  footable-paging-center  table table-stripped table-hover  toggle-arrow-tiny"
                                   data-paging-size="100" data-paging="true" data-filtering="true"
                                   data-sorting="false">
                                <thead>
                                <tr>
                                    <th data-sort-ignore="true" {{ is_granted("ROLE_SUPER_ADMIN") ? "width='12%'" }}>{{ 'backend.transferencia.table.codigo'|trans }}</th>
                                    <th data-sort-ignore="true">{{ 'backend.transferencia.table.emisor'|trans }}</th>
                                    <th data-sort-ignore="true">{{ 'backend.transferencia.table.titular'|trans }}</th>
                                    <th data-sort-ignore="true">{{ 'backend.transferencia.table.tarjeta'|trans }}</th>
                                    <th>{{ 'backend.transferencia.table.total'|trans }}</th>
                                    <th>{{ 'backend.transferencia.table.fecha'|trans }}</th>
                                    <th>{{ 'backend.transferencia.table.repartidor'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for choice in transferencias %}
                                    {% set transferencia = choice.vars.value %}
                                    <tr>
                                        <td>{{ transferencia.codigo }}</td>
                                        <td>{{ transferencia.emisor ? transferencia.emisor : '-' }}</td>
                                        <td>{{ transferencia.titularTarjeta }}</td>
                                        <td>{{ transferencia.numeroTarjeta }}</td>
                                        <td>{{ transferencia.importe | number_format(2, '.', ',') }} {{ transferencia.moneda }}</td>
                                        <td>{{ transferencia.created | date('d/m/Y') }}</td>
                                        <td>
                                            {{ form_widget(choice.repartidor,{'attr':{
                                                'class':'form-control'
                                            }}) }}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-12 col-xs-12">
                            {% if transferencias |length > 0 %}
                                <button type="submit" class="btn btn-warning pull-right">
                                    <i class="fa fa-check-square-o"></i>
                                    {{ 'backend.transferencia.asignar.btn' | trans }}
                                </button>
                            {% else %}
                                <button type="submit" class="btn btn-warning pull-right disabled" disabled>
                                    <i class="fa fa-check-square-o"></i>
                                    {{ 'backend.transferencia.asignar.btn' | trans }}
                                </button>
                            {% endif %}
                        </div>
                    </div>
