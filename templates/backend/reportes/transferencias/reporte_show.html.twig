{% trans_default_domain 'AppBundle' %}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Cerrar</span>
    </button>
    <h5 class="modal-title">Transferencisas del Reporte de
        envÃ­o {{ tnReporteTransferencia.created | date('d/m/Y H:i:s A') }}</h5>
</div>

<div class="modal-body">
    <div class="row">
        <div id='table' class="table-responsive">
            <table class="table table-stripped table-hover toggle-arrow-tiny">
                <thead>
                <tr>
                    <th>{{ 'backend.transferencia.table.codigo'|trans }}</th>
                    <th>{{ 'backend.transferencia.table.titular'|trans }}</th>
                    <th>{{ 'backend.transferencia.table.tarjeta'|trans }}</th>
                    <th>{{ 'backend.transferencia.table.total'|trans }}</th>
                    <th>{{ 'backend.transferencia.table.fecha'|trans }}</th>
                    <th>{{ 'backend.transferencia.table.estado'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for transferencia in tnReporteTransferencia.transferencias %}
                    <tr>
                        <td>{{ transferencia.codigo }}</td>
                        <td>{{ transferencia.titularTarjeta }}</td>
                        <td>{{ transferencia.numeroTarjeta }}</td>
                        <td>{{ transferencia.importe | number_format(2, '.', ',') }} {{ transferencia.moneda }}</td>
                        <td>{{ transferencia.created | date('d/m/Y') }}</td>
                        <td>
                            <div id="state_transferencia_{{ transferencia.id }}">
                                {% if transferencia.estado.codigo == '01' %}
                                    <span class="label label-info">Pendiente</span>
                                {% elseif transferencia.estado.codigo == '02' %}
                                    <span class="label label-warning">Enviada</span>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

