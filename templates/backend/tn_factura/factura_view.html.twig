    <link href="............/web/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="............/web/assets/global/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css"/>
    #}

</head>
