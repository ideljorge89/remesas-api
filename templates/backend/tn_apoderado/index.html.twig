{% extends 'base_backend.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block breadcrumb %}
    <div class="col-lg-12">
        <h2>{{ 'backend.user_menu.administrator.nomencladores.apoderado.title'|trans({},'FOSUserBundle') }}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('homepage_backend') }}"><i
                            class="fa fa-home"></i> {{ 'backend.user_menu.breadcrumb.home'|trans({},'FOSUserBundle') }}
                </a>
            </li>
            <li class="">
                {{ 'backend.user_menu.administrator.nomencladores.title'|trans({},'FOSUserBundle') }}
            </li>
            <li class="active">
                <strong>{{ 'backend.user_menu.administrator.nomencladores.apoderado.title'|trans({},'FOSUserBundle') }}</strong>
            </li>
        </ol>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <a class="btn btn-primary pull-right" href="{{ path('tn_apoderado_new') }}">
                                <i class="fa fa-plus"></i>
                                {{ 'backend.user_menu.administrator.nomencladores.apoderado.add'|trans({},'FOSUserBundle') }}
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id='table' class="table-responsive">
                                <table class="footable footable-paging footable-paging-center  footable-paging-center  table table-stripped table-hover  toggle-arrow-tiny"
                                       data-paging-size="50" data-paging="true" data-filtering="true"
                                       data-sorting="true">
                                    <thead>
                                    <tr>
                                        <th>{{ 'backend.apoderado.table.nombre'|trans }}</th>
                                        <th>{{ 'backend.apoderado.table.agencia'|trans }}</th>
                                        <th>{{ 'backend.apoderado.table.subordinadas'|trans }}</th>
                                        <th data-breakpoints="all">{{ 'backend.apoderado.table.created'|trans }}</th>
                                        <th data-breakpoints="all">{{ 'backend.apoderado.table.updated'|trans }}</th>
                                        <th class="text-right"
                                            data-sort-ignore="true">{{ 'backend.comun.table.actions'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for apoderado in tn_apoderados %}
                                        <tr>
                                            <td>{{ apoderado.nombre }}</td>
                                            <td>{{ apoderado.agencia ? apoderado.agencia.nombre }}</td>
                                            <td>
                                                <ul style="list-style-type: square; position: relative; margin-left: 0; padding-left: 0">
                                                    {% for agencia in apoderado.subordinadas %}
                                                        <li>{{ agencia.nombre }}</li>
                                                    {% endfor %}
                                                </ul>
                                            </td>
                                            <td>{{ apoderado.created ? apoderado.created|date('Y-m-d') : '' }}</td>
                                            <td>{{ apoderado.updated ? apoderado.updated|date('Y-m-d') : '' }}</td>
                                            <td class="text-right">
                                                <a class="btn btn-warning btn-xs" data-toggle="tooltip"
                                                   title="Editar Apoderado"
                                                   href="{{ path('tn_apoderado_edit', {'token': apoderado.token}) }}"><i
                                                            class="fa fa-pencil-square-o"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
