{% extends 'base_backend.html.twig' %}
{% trans_default_domain 'AppBundle' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/backend/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css') }}"
          rel="stylesheet">
    <link href="{{ asset('assets/backend/css/plugins/footable/footable.core.css') }}" rel="stylesheet">

{% endblock %}
{% block breadcrumb %}
    <div class="col-lg-12">
        <h2>{{ 'backend.user_menu.administrator.configurations'|trans({},'FOSUserBundle') }}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('homepage_backend') }}"><i
                            class="fa fa-home"></i> {{ 'backend.user_menu.breadcrumb.home'|trans({},'FOSUserBundle') }}
                </a>
            </li>
            <li class="active">
                <strong>{{ 'backend.user_menu.administrator.configurations'|trans({},'FOSUserBundle') }}</strong>
            </li>
        </ol>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <input type="text" id="filter" class="form-control m-b-xs"
                           placeholder="{{ 'backend.comun.search'| trans }}">

                    <div id='table' class="table-responsive">
                        <table class="footable footable-paging footable-paging-center   table table-stripped table-hover  toggle-arrow-tiny" data-paging-size="50" data-paging="true" data-filtering="true" data-sorting="true">

                            <thead>
                            <tr>
                                <th>{{ 'backend.configurations.table.atributo'|trans }}</th>
                                <th>{{ 'backend.configurations.table.valor'|trans }}</th>
                                <th class="text-right"
                                    data-sort-ignore="true">{{ 'backend.comun.table.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for var,value in data %}
                                <tr>
                                    <td>
                                        {{ ('backend.configurations.attributes.'~var)|trans }}
                                    </td>
                                    <td>
                                        {{ value }}
                                    </td>
                                    <td class="text-right">
                                        <a href="{{ path('backend_configurations_edit', {'config': var }) }}"
                                           class="btn btn-sm btn-warning show-option"
                                           title="{{ 'backend.comun.table.edit'|trans }}"><i
                                                    class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                            <tfoot class="hide-if-no-paging">
                            <tr>
                                <td colspan="3" class="text-center">
                                    <ul class="pagination">
                                    </ul>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- FooTable -->

    <script src="{{ asset('assets/backend/js/plugins/footable/footable.all.min.js') }}"></script>
    <!-- Page-Level Scripts -->
    <script>

        $(document).ready(function () {
            function ready1() {
                $('.footable').footable({
                    "empty": "Sin resultados",
                    "filtering":{
                        "connectors": false,
                    },
                    "paging": {
                        "position": "center",
                        "countFormat": "Mostrando {CP} of {TP} p√°ginas| Total registros:{TR}"
                    }
                })
            }

            ready1();
        });
    </script>
{% endblock %}
