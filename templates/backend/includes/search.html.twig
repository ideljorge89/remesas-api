{% trans_default_domain 'AppBundle' %}
<table class="footable footable-paging footable-paging-center   table table-stripped table-hover  toggle-arrow-tiny" data-paging-size="50" data-paging="true" data-filtering="true" data-sorting="true">
    <thead>
    <tr>
        <th>{{ 'home.table.nocontenedor'|trans }}</th>
        <th>{{ 'home.table.codigocontenedor'|trans }}</th>
        <th>{{ 'home.table.mbl'|trans }}</th>
        <th>{{ 'home.table.salida'|trans }}</th>
        <th>{{ 'home.table.izl'|trans }}</th>
        <th>{{ 'home.table.persona'|trans }}</th>
        <th>{{ 'home.table.ci'|trans }}</th>
        <th class="text-right"  data-sort-ignore="true">{{ 'home.table.actions'|trans }}</th>
    </tr>
    </thead>
    <tbody>
        {% for izl in data %}
            <tr>
                <td>{{ izl.manifiesto.noContainer }}</td>
                <td>{{ izl.manifiesto.containerCode }}</td>
                <td>{{ izl.mbl }}</td>
                <td>{{ izl.manifiesto.salida|date('d/m/Y') }}</td>
                <td>{{ izl.codigoBulto }}</td>
                <td>{{ izl.consignado.nombre }}</td>
                <td>{{ izl.consignado.noIdentidad }}</td>
                <td class="text-right">
                    {% if loop.first  %}{{ form_widget(form._token) }}{% endif %}
                    <a href="{{ path('izl-view',{'id':izl.id}) }}" data-target='#modal-form' class="btn btn-sm btn-primary"><i class="fa fa-eye"></i></a>
                </td>
            </tr>
        {% else %}
            <tr >No se encontraron datos.{{ form_widget(form._token) }}</tr>
        {% endfor %}

    </tbody>
    <tfoot class="hide-if-no-paging">
    <tr>
        <td colspan="5" class="text-center">
            <ul class="pagination">
            </ul>
        </td>
    </tr>
    </tfoot>
</table>